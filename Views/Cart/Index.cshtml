@model CartViewModel

@{
    ViewData["Title"] = "Cart Overview";
}

@if (Model.CartItems.Count > 0)
{
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Shopping Cart</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Actions</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="text-center align-middle">@item.Quantity</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Add" asp-route-itemId="@item.ProductId"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-plus">+</i>
                                        </a>
                                        <a asp-action="Decrease" asp-route-itemId="@item.ProductId"
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-dash">-</i>
                                        </a>
                                        <a asp-action="Remove" asp-route-itemId="@item.ProductId"
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash">Remove</i>
                                        </a>
                                    </div>
                                </td>
                                <td class="text-end align-middle">@item.Price.ToString("C2")</td>
                                <td class="text-end align-middle">
                                    @Model.CartItems.Where(x=>x.ProductId==item.ProductId).Sum(x=>x.Quantity * x.Price).ToString("C2")
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="4" class="text-end fw-bold">Grand Total:</td>
                            <td class="text-end fw-bold">@Model.GrandTotal.ToString("C2")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Clear" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Clear Cart
                </a>
                <a href="#" class="btn btn-primary">
                    <i class="bi bi-cart-check"></i> Proceed to Checkout
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-cart-x display-1 text-muted"></i>
        <h2 class="mt-3">Your Cart is Empty</h2>
        <p class="lead text-muted">Add some items to your cart to get started!</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
            <i class="bi bi-shop"></i> Continue Shopping
        </a>
    </div>
}
