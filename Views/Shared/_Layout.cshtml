<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commercePlants</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commercePlants.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="bi bi-flower1 text-success me-2"></i>
                    <span class="fw-bold">E_commercePlants</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <vc:menu />
                    </ul>
                    <partial name="_IdentityLinksPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1 py-4">
        <main role="main">
            <div class="row g-4">
                <div class="col-lg-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <vc:categories />
                        </div>
                    </div>
                    <div class="card shadow-sm mt-4">
                        <div class="card-body">
                            <vc:small-cart />
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <partial name="_NotificationsPartial" />
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col-md-6">
                    &copy; 2025 - E_commercePlants - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="text-decoration-none text-dark"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-decoration-none text-dark"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-decoration-none text-dark"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
